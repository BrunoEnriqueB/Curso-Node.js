<h1>Usu√°rios cadastrados</h1>
    <div class="container">
    {{#each users}}
        <div class="item">
        <h2>{{this.name}}</h2>
        <p>{{this.occupation}}</p>
        <div class="actions">
            <a href="/users/{{this.id}}" class="details-btn">Ver detalhes</a>
            <form action="/users/edit/{{this.id}}" method="GET">
                <input type="submit" value="Editar" class="edit-btn">
            </form>
            <form action="/users/delete/{{this.id}}" method="POST" class="delete-form">
                <input type="submit" value="Excluir" class="delete-btn">
            </form>
        </div>
        </div>
    {{/each}}
</div>