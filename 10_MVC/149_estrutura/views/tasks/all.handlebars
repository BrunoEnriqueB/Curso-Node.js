<h1>Todas as Tasks:</h1>
<ul class="task-list">
  {{#each tasks}}
    <li>
      <a href="/" class="title">{{this.title}}</a>
      <span class="actions">
        <form action="/tasks/done/{{this.id}}" method="POST">
            {{#if this.done}}
               <button type="submit"><a href="/"><i class="bi bi-check2 bi-check2-true"></i></a></button> 
            {{else}}
                <button type="submit"><a href="/"><i class="bi bi-check2-all bi-check2-false"></i></a></button> 
            {{/if}}
            
        </form>
        <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
        <form action="/tasks/remove" method="POST">
            <input type="hidden" name="id" value={{this.id}}>
            <button type="submit"><a href="/"><i class="bi bi-x-lg"></i></a></button>
        </form>
      </span>
    </li>
  {{/each}}
</ul>